# Server Configuration
NODE_ENV=production
PORT=5100
ORCHESTRATOR_PORT=5100
ORCHESTRATOR_HOST=0.0.0.0
ORCHESTRATOR_LOG_LEVEL=info

# Security
# REQUIRED: Change this in production
GRAFANA_ADMIN_PASSWORD=admin
# Enable API key authentication (true/false)
ORCHESTRATOR_ENABLE_AUTH=false
# Comma-separated list of API keys
ORCHESTRATOR_API_KEYS=
# Comma-separated list of admin API keys
ORCHESTRATOR_ADMIN_API_KEYS=

# Feature Toggles
ORCHESTRATOR_ENABLE_QUEUE=true
ORCHESTRATOR_ENABLE_CIRCUIT_BREAKER=true
ORCHESTRATOR_ENABLE_METRICS=true
ORCHESTRATOR_ENABLE_STREAMING=true
ORCHESTRATOR_ENABLE_PERSISTENCE=true

# Metrics & Monitoring
ORCHESTRATOR_PROMETHEUS_ENABLED=true
ORCHESTRATOR_PROMETHEUS_PORT=9090

# Persistence
ORCHESTRATOR_PERSISTENCE_PATH=./data

# Queue Settings
ORCHESTRATOR_QUEUE_MAX_SIZE=1000
ORCHESTRATOR_QUEUE_TIMEOUT=30000

# Health Checks
ORCHESTRATOR_HC_ENABLED=true
ORCHESTRATOR_HC_INTERVAL=30000

# Ollama Settings (for docker-compose.prod.yml)
OLLAMA_HOST=0.0.0.0
